@model  PurchaseOrderPOVM
@{
    ViewBag.Title = "Index";
}
@section styles{
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
}
<style>
    table tbody tr td {
        vertical-align: middle !important;
    }
</style>
<div id="content">
    <section id="widget-grid" class="">
        <div class="row table-parent">
            <div class="tool-content table-row col-xs-12">
                <div class="search-input table-cell col-xs-10">
                    <div class="table-parent">
                        <div class="table-cell form-horizontal col-xs-11 no-padding">
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">Company</label>
                                <div class="col-xs-8 col-md-4">
                                    <select class="form-control input-sm" id="Company" style="margin-top: 4px;">
                                        <option value="">全部</option>
                                    </select>
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Vendor</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Vendor">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">PO #</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="PO">
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">PODate</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="PODate">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">PO Status</label>
                                <div class="col-xs-8 col-md-4">
                                    <select class="form-control input-sm" id="POStatus" style="margin-top: 4px;">
                                        <option value="">全部</option>
                                    </select>
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Invoice Date</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="InvoiceDate">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">PO Type</label>
                                <div class="col-xs-8 col-md-4">
                                    <select class="form-control input-sm" id="POType" style="margin-top: 4px;">
                                        <option value="">全部</option>
                                    </select>
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Invoice No</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="InvoiceNo">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">Creater</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Creater">
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Payment Date</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="PaymentDate">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">Payment Status</label>
                                <div class="col-xs-8 col-md-4">
                                    <select class="form-control input-sm" id="PaymentStatus" style="margin-top: 4px;">
                                        <option value="">全部</option>
                                    </select>
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Received Date</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="ReceivedDate">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">Receive Status</label>
                                <div class="col-xs-8 col-md-4">
                                    <select class="form-control input-sm" id="ReceiveStatus" style="margin-top: 4px;">
                                        <option value="">全部</option>
                                    </select>
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Brand</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Brand">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">Tracking</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Tracking">
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Category</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Category">
                                </div>
                            </div>
                            <div class="col-xs-12 no-padding">
                                <label class="col-xs-4 col-md-1 control-label">SKU / Name</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="SKU">
                                </div>
                                <label class="col-xs-4 col-md-1 control-label">Serial</label>
                                <div class="col-xs-8 col-md-4">
                                    <input class="form-control input-sm" type="text" id="Serial">
                                </div>
                            </div>
                        </div>
                        <div class="table-cell col-xs-1">
                            <button type="button" id="btn-search" class="btn btn-info btn-lg">Search</button>
                        </div>
                    </div>
                </div>
                <div class="action-button table-cell ">
                    <a type="button" class="btn btn-default btn-sm btn-block" id="CreatePO" href="@Url.Action("Create")">Create PO</a>
                    <a type="button" class="btn btn-default btn-sm btn-block" id="CreateCM" >Create CM</a>
                </div>
            </div>
        </div>

        <div class="row">
            <article class="col-xs-12">
                <div class="col-xs-1 col-xs-offset-11">
                    <button type="button" class="btn btn-default btn-sm btn-block" id="Copy">Copy</button>
                    <button type="button" class="btn btn-default btn-sm btn-block" id="Delete">Delete</button>
                </div>
                <table id="DataGrid"></table>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    @Html.DataGridFor(x => Model, "#DataGrid", true, "PurchaseOrderList", "ID", false, true, false, false)
    <script type="text/javascript">
        $(document).ready(function () {
            $("#CreateCM").on("click", function () {
                var dataList = [];
                var rows = $table.datagrid('getSelections');
                for (var i in rows) {
                    dataList.push("ID=" + rows[i].ID);
                }
                if (dataList.length == 1) {
                    document.location.href = "@Url.Action("CreateCM")?" + dataList.join("&");
                }
                else if (dataList.length > 1) {
                    alert("只能選擇一筆PO單號" + dataList);
                }
                else {
                    alert("請勾選PO單號");
                }

            });
            $("#Copy").on("click", function () {
                var dataList = [];
                var rows = $table.datagrid('getSelections');
                for (var i in rows) {
                    dataList.push(rows[i].ID);
                }
                $.ajax({
                    traditional: true,
                    type: "post",
                    url: "@Url.Action("CopyData")",
                    data: {
                        IDList: dataList,
                    },
                    success: function (data) {
                        if (data.status) {
                            dataInit();
                        }
                    }
                });
            });
            $("#Delete").on("click", function () {
                var dataList = [];
                var rows = $table.datagrid('getSelections');
                for (var i in rows) {
                    dataList.push(rows[i].ID);
                }
                var DeleteOK = confirm('是否確定刪除' + dataList);
                if (DeleteOK) {
                    $.ajax({
                        traditional: true,
                        type: "post",
                        url: "@Url.Action("DeleteData")",
                        data: {
                            IDList: dataList,
                        },
                        success: function (data) {
                            if (data.status) {
                                dataInit();
                            }
                        }
                    });
                }
            });
        });
    </script>
}