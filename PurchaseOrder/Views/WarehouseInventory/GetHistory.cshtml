@model IEnumerable<SerialsLlistVM>
@{
    Layout = null;
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>IS Type</th>
            <th>ID</th>
            <th>Warehouse</th>
            <th>QTY</th>
            <th>Updated By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToLocalTime()</td>
                <td>@item.ISType</td>
                <td>
                    @if (item.ISType == "Transfer(In)")
                    {
                        <a href=' @Url.Action("Edit", "Transfer", new { id = item.ID })' target="_blank">@item.ID</a>
                    }
                    else if (item.ISType == "Transfer(Out)")
                    {
                        <a href=' @Url.Action("Edit", "Transfer", new { id = item.ID })' target="_blank">@item.ID</a>
                    }
                    else if (item.ISType == "PurchaseOrder")
                    {
                        <a href=' @Url.Action("EditItem", "PurchaseOrderPO", new { id = item.ID })' target="_blank">@item.ID</a>
                    }
                    else if (item.ISType == "CreditNote")
                    {
                        <a href=' @Url.Action("EditItem", "PurchaseOrderCM", new { id = item.ID })' target="_blank">@item.ID</a>
                    }
                    else if (item.ISType == "Order")
                    {
                        <a href='https://dm.cwa.sellercloud.com/Orders/Orders_details.aspx?id=@(item.ID)' target="_blank">@item.ID</a>
                    }
                    else if (item.ISType == "RMA")
                    {
                        <a href=' @Url.Action("Edit", "RMA", new { id = item.ID })' target="_blank">@item.ID</a>
                    }
                    else
                    {
                        @item.ID
                    }
                </td>
                <td>@item.Warehouse</td>
                <td>@item.QTY</td>
                <td>@item.UpdatedBy</td>
            </tr>
        }
    </tbody>

</table>
