@model IEnumerable<PurchaseSKU>
@{
    ViewBag.title = "Serials";
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2>清單</h2>
                        <ul class="nav nav-tabs pull-right">
                            <li><a data-toggle="tab" href="#hb1">@ViewBag.title</a></li>
                        </ul>
                    </header>

                    <div>
                        <div class="widget-body no-padding">
                            <form id="data-form" class="form-horizontal" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="IsEnable" value="True">

                                <div id="content" class="tab-content">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="tab-pane" id="hb1">
                                        <fieldset>
                                            <legend>Company ： @(Model.FirstOrDefault()?.PurchaseOrder.Company.Name)</legend>
                                        </fieldset>
                                        <fieldset>
                                            <legend>@(Model.FirstOrDefault()?.SkuNo) ： @(Model.FirstOrDefault()?.Name)</legend>
                                            <div class="row">
                                                <article class="col-xs-12">
                                                    <table id="DataGridC" class="table table-striped table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Serial</th>
                                                                <th>Order</th>
                                                                <th>RMA</th>
                                                                <th>PO</th>
                                                                <th>CM</th>
                                                                <th>Warehouse</th>
                                                                <th>Dispatch Location</th>
                                                                <th>Value</th>
                                                                <th>Date</th>
                                                                <th>History</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model != null && Model.Any())
                                                            {
                                                                foreach (var Skuitem in Model)
                                                                {
                                                                    if (Skuitem.SerialsLlist != null && Skuitem.SerialsLlist.Any())
                                                                    {
                                                                        foreach (var SerialsNoitem in Skuitem.SerialsLlist.Select(x => x.SerialsNo).Distinct())
                                                                        {
                                                                            var SerialsLlist = Skuitem.SerialsLlist.Where(x => x.SerialsNo == SerialsNoitem).ToList();
                                                                            var Order = SerialsLlist.Where(x => x.OrderID.HasValue).FirstOrDefault()?.OrderID;
                                                                            var RMA = SerialsLlist.Where(x => x.RMAID.HasValue).FirstOrDefault()?.RMAID;
                                                                            var PurchaseOrderID = SerialsLlist.Where(x => x.PurchaseSKU.PurchaseOrderID.HasValue).FirstOrDefault()?.PurchaseSKU.PurchaseOrderID;
                                                                            var CreditMemoID = SerialsLlist.Where(x => x.PurchaseSKU.CreditMemoID.HasValue).FirstOrDefault()?.PurchaseSKU.CreditMemoID;
                                                                            var WarehouseName = SerialsLlist.Where(x => !string.IsNullOrWhiteSpace(x.PurchaseSKU.PurchaseOrder.Warehouse1.Name)).FirstOrDefault()?.PurchaseSKU.PurchaseOrder.Warehouse1.Name;
                                                                            var Price = SerialsLlist.Where(x => x.PurchaseSKU.Price.HasValue).FirstOrDefault()?.PurchaseSKU.Price;
                                                                            var CreateAt = SerialsLlist.OrderByDescending(x => x.CreateAt).FirstOrDefault()?.CreateAt;
                                                                            <tr>
                                                                                <td>@SerialsNoitem</td>
                                                                                <td>@Order</td>
                                                                                <td>@RMA</td>
                                                                                <td>@PurchaseOrderID</td>
                                                                                <td>@CreditMemoID</td>
                                                                                <td>@WarehouseName</td>
                                                                                <td></td>
                                                                                <td>@Price</td>
                                                                                <td>@CreateAt</td>
                                                                                <td>
                                                                                    <a class='btn btn-default btn-sm GetHistory' href='@Url.Action("GetHistory", new {ID= SerialsNoitem })'>History</a>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    }
                                                                }

                                                            }
                                                        </tbody>
                                                    </table>
                                                </article>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>

                                @*<div class="widget-footer">
                                        <button type="submit" class="btn btn-primary" id="save">儲存</button>
                                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index")'">返回</button>
                                    </div>*@
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<div id="dialog" title="History">
  
</div>
@section pagespecific {
    <script type="text/javascript">
        var hash = window.location.hash;
        $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
        $('.tab-pane').eq(hash.substr(1)).addClass('active');

        //$('.datepicker').datepicker({
        //    dateFormat: 'yy-mm-dd'
        //});
        $(document).ready(function () {
            $("#dialog").dialog({
                autoOpen: false,
                width: 800
            });
            $(".GetHistory").click(function () {
                $.ajax({
                    url: $(this).attr("href"),

                    success: function (data) {
                        $("#dialog").html(data);
                        $("#dialog").dialog("open");
                        //$("#dialog").load(data).dialog({ modal: true }).dialog('open');
                    }
                });
                return false;
            });
        });
    </script>
}



