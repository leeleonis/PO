@model IEnumerable<StatementVM>
@{
    ViewBag.title = "Inventory Statement";
}
<style>
    tfoot {
        display: table-header-group;
    }
</style>
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2>清單</h2>
                        <ul class="nav nav-tabs pull-right">
                            <li><a data-toggle="tab" href="#hb1">@ViewBag.title</a></li>
                        </ul>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <form id="data-form" class="form-horizontal" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="IsEnable" value="True">
                                <div id="content" class="tab-content">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="tab-pane" id="hb1">
                                        <fieldset>
                                            <legend>@ViewBag.Company</legend>
                                        </fieldset>
                                        <fieldset>
                                            <legend>@ViewBag.Name</legend>
                                            <div class="row">
                                                <article class="col-xs-12">
                                                    <table id="DataGridC" class="table table-striped table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th></th>
                                                                <th>SKU</th>
                                                                <th>Date</th>
                                                                <th>Supplier</th>
                                                                <th class="select">Channel</th>
                                                                <th class="select">IS Type</th>
                                                                <th>ID</th>
                                                                <th class="select">Warehouse</th>
                                                                <th>Serial</th>
                                                                <th>QTY</th>
                                                                @*<th>Price</th>
                                                                <th>Balance (Aggregate)</th>
                                                                <th>Balance (Available)</th>
                                                                <th>Value (Available)</th>*@
                                                            </tr>
                                                        </thead>
                                                        <tfoot></tfoot>
                                                        <tbody>
                                                            @foreach (var item in Model)
                                                            {
                                                            <tr>
                                                                <td></td>
                                                                <td>
                                                                    <a href=' @Url.Action("edit", "Sku", new { id =item.SKU})' target="_blank">@(item.SKU)</a>
                                                                </td>
                                                                <td>@item.Date</td>
                                                                <td>@item.Supplier</td>
                                                                <td>@item.Channel</td>
                                                                <td>@item.ISType</td>
                                                                <td>
                                                                    @if (item.ISType == "Transfer(In)")
                                                                    {
                                                                        <a href=' @Url.Action("Edit", "Transfer", new { id = item.ID })' target="_blank">@item.ID</a>
                                                                    }
                                                                    else if (item.ISType == "Transfer(Out)")
                                                                    {
                                                                        <a href=' @Url.Action("Edit", "Transfer", new { id = item.ID })' target="_blank">@item.ID</a>
                                                                    }
                                                                    else if (item.ISType == "PO")
                                                                    {
                                                                        <a href=' @Url.Action("EditItem", "PurchaseOrderPO", new { id = item.ID })' target="_blank">@item.ID</a>
                                                                    }
                                                                    else if (item.ISType == "Credit Memo")
                                                                    {
                                                                        <a href=' @Url.Action("EditItem", "PurchaseOrderCM", new { id = item.ID })' target="_blank">@item.ID</a>
                                                                    }
                                                                    else if (item.ISType == "Order Dispatch")
                                                                    {
                                                                        <a href='https://dm.cwa.sellercloud.com/Orders/Orders_details.aspx?id=@(item.ID)' target="_blank">@item.ID</a>
                                                                    }
                                                                    else if (item.ISType == "RMA")
                                                                    {
                                                                        <a href=' @Url.Action("Edit", "RMA", new { id = item.ID })' target="_blank">@item.ID</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        @item.ID
                                                                    }
                                                                </td>
                                                                <td>@item.Warehouse</td>
                                                                <td>
                                                                    <a href=' @Url.Action("Serials", new { SKU = item.SKU,WarehouseID=ViewBag.WarehouseID })' target="_blank">@item.Serial</a>
                                                                </td>
                                                                <td>@item.QTY</td>
                                                                @*<td>@item.price</td>
                                                                <td>@item.BalanceAggregate</td>
                                                                <td>@item.BalanceAvailable</td>
                                                                <td>@item.ValueAvailable</td>*@
                                                            </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </article>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="widget-footer">
                                    @*<button type="submit" class="btn btn-primary" id="save">儲存</button>*@
                                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index","WarehouseInventory",new {id= ViewBag.WarehouseID})'">返回</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    <script type="text/javascript">
        var hash = window.location.hash;
        $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
        $('.tab-pane').eq(hash.substr(1)).addClass('active');

        //$('.datepicker').datepicker({
        //    dateFormat: 'yy-mm-dd'
        //});
        $(document).ready(function () {
            var tableID = "#DataGridC";
            var DataGridC = $(tableID).DataTable({
                "columnDefs": [{ "orderable": false, "targets": 0 }],
                "order": []
            });
            $(tableID + " thead tr").clone().appendTo($(tableID + " tfoot"));
            $(tableID + " tfoot th").each(function (i) {
                var title = $(this).text();
                if (title != "") {
                    if ($(this).hasClass("select")) {
                        var select = $('<select><option value="">Select</option></select>').appendTo($(this).empty()).on('change', function () {
                            DataGridC.column(i).search($(this).val()).draw();
                        });
                        DataGridC.column(i).data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    }
                    else {
                        $(this).html('<input type="text" placeholder="Search ' + title + '" />');
                        $('input', this).on('keyup change', function () {
                            if (DataGridC.column(i).search() !== this.value) {
                                DataGridC.column(i).search(this.value).draw();
                            }
                        });
                    }
                }
            });
        });
    </script>
}



