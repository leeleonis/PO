@model AdminUser
@section styles{
    <style>
        .table > tbody > tr > td {
            padding: 6px 6px;
            vertical-align: middle !important;
        }
    </style>
}
@{
    var MenuList = (IEnumerable<Menu>)ViewBag.menu;
    var pageAuthIndex = 0;
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false"
                     data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>編輯</h2>
                        <ul class="nav nav-tabs pull-right">
                            <li><a data-toggle="tab" href="#hb1">頁面總權限</a></li>
                            <li><a data-toggle="tab" href="#hb2">訂單權限</a></li>
                            <li><a data-toggle="tab" href="#hb3">品號權限</a></li>
                        </ul>
                    </header>

                    <div>
                        <div class="widget-body no-padding">
                            <form id="data-form" class="form-horizontal" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(x => x.ID)
                                <div id="content" class="tab-content">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <fieldset>
                                                <legend>使用者資料</legend>

                                                <div class="col-sm-12 col-lg-6 col-lg-offset-1">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-1 control-label" })
                                                        <div class="col-sm-10 col-lg-4">
                                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "col-sm-1 control-label" })
                                                        <div class="col-sm-10 col-lg-4">
                                                            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-1 control-label" })
                                                        <div class="col-sm-10 col-lg-4">
                                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Group, htmlAttributes: new { @class = "col-sm-1 control-label" })
                                                        <div class="col-sm-10 col-lg-4">
                                                            @Html.DropDownListFor(model => model.Group, (IEnumerable<SelectListItem>)ViewBag.Group, htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.Group, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="tab-pane" id="hb1">
                                        <fieldset>
                                            <div class="col-sm-12">
                                                <ol class="dd-list" id="auth-list">
                                                    @Html.Action("MenuListAuth", "Ajax", new { id = Model.ID, mod = "UI", Gid = Model.Group })
                                                </ol>
                                            </div>
                                        </fieldset>
                                    </div>

                                    <div class="tab-pane" id="hb2">
                                        <fieldset>
                                            <legend>編輯頁面</legend>

                                            <div class="form-group">
                                                @{ 
                                                    var auth = Model.PageAuth.FirstOrDefault(a => a.Type.Equals("OrderEdit"));
                                                    var authGroup = !string.IsNullOrEmpty(auth?.AuthGroup) ? JsonConvert.DeserializeObject<Dictionary<string, bool>>(auth.AuthGroup) : new Dictionary<string, bool>();
                                                    var groupName = "authGroup[" + pageAuthIndex++ + "]";
                                                }
                                                @Html.Hidden(groupName + "[ID]", auth?.ID ?? 0)
                                                @Html.Hidden(groupName + "[User]", auth?.User ?? Model.ID)
                                                @Html.Hidden(groupName + "[Type]", auth?.Type ?? "OrderEdit")
                                                <div class="col-sm-12 col-lg-4 col-lg-offset-1">
                                                    <table class="table table-bordered text-center">
                                                        <tbody>
                                                            <tr>
                                                                <td><span>Order Status</span></td>
                                                                <td width="100">@Html.BooleanSwitch(groupName + "[GroupData][OrderStatus]", authGroup.ContainsKey("OrderStatus") ? authGroup["OrderStatus"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Rush Order</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][RushOrder]", authGroup.ContainsKey("RushOrder") ? authGroup["RushOrder"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Create RMA</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][CreateRMA]", authGroup.ContainsKey("CreateRMA") ? authGroup["CreateRMA"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Edit Address</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][EditAddress]", authGroup.ContainsKey("EditAddress") ? authGroup["EditAddress"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Edit Payment</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][EditPayment]", authGroup.ContainsKey("EditPayment") ? authGroup["EditPayment"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Shipping Action</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][ShippingAction]", authGroup.ContainsKey("ShippingAction") ? authGroup["ShippingAction"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Edit Sku</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][EditSku]", authGroup.ContainsKey("EditSku") ? authGroup["EditSku"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Shipping Setting</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][ShippingSetting]", authGroup.ContainsKey("ShippingSetting") ? authGroup["ShippingSetting"] : true)</td>
                                                            </tr>
                                                            <tr>
                                                                <td><span>Mark Shipped</span></td>
                                                                <td>@Html.BooleanSwitch(groupName + "[GroupData][MarkShipped]", authGroup.ContainsKey("MarkShipped") ? authGroup["MarkShipped"] : true)</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>

                                <div class="widget-footer">
                                    <button type="submit" class="btn btn-primary" id="save">儲存</button>
                                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("index")'">返回</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src="~/scripts/jquery.easyui-1.4.3.min.js"></script>
    <script type="text/javascript">
        var hash = window.location.hash;
        $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
        $('.tab-pane').eq(hash.substr(1)).addClass('active');

        $(document).ready(function () {
            $("form").makeValidationInline();
            $("#Group").change(function () {
                $.post("@Url.Action("MenuListAuth", "Ajax")", {
                    id: @Model.ID,
                    Gid: $(this).val(),
                    mod: "UE"
                }, function (data) {
                    $("#auth-list").html(data);
                    //$('.onoffswitch-checkbox').attr('disabled', 'true');
                });
            });
        });
    </script>
}