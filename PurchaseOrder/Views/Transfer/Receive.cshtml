@model Transfer
@{
    ViewBag.title = "TransferIn Serials";
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>

                        <h2>移倉</h2>
                        <ul class="nav nav-tabs pull-right">
                            <li>
                                <a data-toggle="tab" href="#hb1">@ViewBag.title</a>
                            </li>
                        </ul>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <form id="data-form" class="form-horizontal" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="IsEnable" value="True">
                                <div id="content" class="tab-content">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="tab-pane" id="hb1">
                                        <fieldset>
                                            <legend>@ViewBag.title</legend>
                                            <div class="row">
                                                <article class="col-xs-12">
                                                    <div class="form-group">
                                                        @Html.Label("Serial:", htmlAttributes: new { @class = "control-label col-sm-2" })
                                                        <div class="col-sm-9 col-lg-2">
                                                            @Html.Editor("Serial", new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                        <div class="col-sm-9 col-lg-8">
                                                            <table id="DataGrid" class="table table-striped table-bordered">
                                                                <thead>
                                                                    <tr>
                                                                        <th>SKU</th>
                                                                        <th>Name</th>
                                                                        <th>QTY (Prep)</th>
                                                                        <th>Serial</th>
                                                                        <th>Label</th>
                                                                        <th>Download</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>     
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </article>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="widget-footer">
                                    <button type="submit" class="btn btn-primary" id="save">儲存</button>
                                    <button type="button" class="btn btn-primary" id="saveexit">儲存並返回</button>
                                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index")'">返回</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    <script type="text/javascript">
        var hash = window.location.hash;
        $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
        $('.tab-pane').eq(hash.substr(1)).addClass('active');
        var DataGrid;
        var tableID = "#DataGrid";
        $(document).ready(function () {
            DataGrid = $(tableID).DataTable({
                columns: [
                    { data: "SKU" },
                    { data: "Name" },
                    {
                        data: "QTY"
                        , render: function (data, type, row, meta) {
                            if (row.SerialTracking) {
                                return data;
                            }
                            else {
                                return '<input class="form-control" type="number"   id="Prep[' + row.SKU + ']" name="Prep[' + meta.row + '].val"  ><input type="hidden" name="Prep[' + meta.row + '].ID" value = ' + row.SKU + ' />' + data;
                            }
                        }
                    },
                    { data: "Serial" },
                    { data: "Label" },
                    { data: "Download" }
                ],
                rowsGroup:[0,1,2],
                ajax: {
                    traditional: true,
                    method: "get",//或post，自由決定，影響到Server端用FormCollection取值或Request.QueryString取得DataTables傳遞的資訊
                    url: "@Url.Action("ReceiveVMList")",
                    data: function (d) {

                    }
                },
                serverSide: true,//啟用ServerSide模式
                //deferLoading: 0, //初始化DataTable時，不發出ajax
                orderMulti: false,
                "paging": false,
                "ordering": false,
                "info": false,
                "searching": false
            });
            $("#Serial").focus();
            $("#Serial").keypress(function (e) {
                var serials = $(this).val();
                code = e.keyCode ? e.keyCode : e.which;
                if (code == 13) {
                    e.preventDefault();
                    $.ajax({
                        type: "post",
                        url: "@Url.Action("ReceiveSaveserials")",
                        data: {
                            id:@Html.Display("id"),
                            serials: serials,
                        },
                        success: function (data) {
                            if (data.status) {
                                DataGrid.draw();
                                $("#Serial").val("");
                                $("#Serial").focus();
                            }
                            else {
                                alert(data.Errmsg);
                            }
                        }
                    });
                }
            });
        });



    </script>
}