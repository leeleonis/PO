@model  CreditMemoVM
@{
    ViewBag.Title = "Index";
    var DefaultSelect = PurchaseOrderSys.App_GlobalResources.Resource.DefaultSelect;
    var CompanyDDL = EnumData.CompanyDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
    var VendorDDL = EnumData.VendorDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
    var CMTypeDDL = EnumData.CMTypeDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
    var CMStatusDDL = EnumData.CMStatusDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
    //var ReturnStatusDDL = EnumData.ReturnStatusDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
    var CreditStatusDDL = EnumData.CreditStatusDDL().Select(x => new SelectListItem { Text = x.Value, Value = x.Key }).ToList();
}
@section styles{
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
}
<style>
    table tbody tr td {
        vertical-align: middle !important;
    }
</style>
<div id="content">
    <section id="widget-grid" class="">
        <div class="row table-parent">
            <div class="tool-content table-row col-xs-12">
                <div class="search-input table-cell col-xs-10">
                    @using (Html.BeginForm())
                    {
                        <div class="table-parent">
                            <div class="table-cell form-horizontal col-xs-11 no-padding">
                                <div class="col-xs-12 no-padding">
                                    <label class="col-xs-4 col-md-1 control-label">Company</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.DropDownListFor(model => model.CompanyID, CompanyDDL, DefaultSelect, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                    <label class="col-xs-4 col-md-1 control-label">Vendor</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.DropDownListFor(model => model.VendorID, VendorDDL, DefaultSelect, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-xs-12 no-padding">
                                    <label class="col-xs-4 col-md-1 control-label">CM #</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new Dictionary<string, object> { { "class", "form-control" } } })
                                    </div>
                                    <label class="col-xs-4 col-md-1 control-label">CMDate</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.EditorFor(model => model.CMDate)
                                    </div>
                                </div>
                                <div class="col-xs-12 no-padding">
                                    <label class="col-xs-4 col-md-1 control-label">CM Status</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.DropDownListFor(model => model.CMStatus, CMStatusDDL, DefaultSelect, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                    <label class="col-xs-4 col-md-1 control-label">Invoice Date</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.EditorFor(model => model.InvoiceDate)
                                    </div>
                                </div>
                                <div class="col-xs-12 no-padding">
                                    <label class="col-xs-4 col-md-1 control-label">CM Type</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.DropDownListFor(model => model.CMType, CMTypeDDL, DefaultSelect, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                    <label class="col-xs-4 col-md-1 control-label">Invoice No</label>
                                    <div class="col-xs-8 col-md-4">
                                        @Html.EditorFor(model => model.InvoiceNo, new { htmlAttributes = new Dictionary<string, object> { { "class", "form-control" } } })
                                    </div>
                                </div>
                                <div class="col-xs-12 no-padding">
                                    <label class="col-xs-4 col-md-1 control-label">Creater</label>
                                    <div class="col-xs-8 col-md-4">
